# ODE MCP Generic - Environment Variables Template
# Copy this file to .env and fill in your values

# Required: Anthropic API key for LLM processing
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: OpenAI API key (if using OpenAI models)
# OPENAI_API_KEY=your_openai_api_key_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8098

# MCP Server Configuration
MCP_SERVER_TIMEOUT=60*5 # 5 minutes timeout for MCP server requests

# Domain-specific configuration. These are here to help customize the application for your specific domain.
# You might want to call them elsewhere in your application to load domain-specific settings.
DOMAIN_NAME=generic
ORGANIZATION_NAME=Your Organization

# Database configuration (if using databases)
# DATABASE_URL=sqlite:///data/domain.db
# DATABASE_POOL_SIZE=5

# External API endpoints (customize for your domain)
# EXTERNAL_API_BASE_URL=https://api.yourdomain.com
# EXTERNAL_API_KEY=your_external_api_key

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=logs/api.log

# Cache configuration
CACHE_ENABLED=true
CACHE_TTL=3600

# Citation system configuration
CITATION_CONFIG_PATH=config/citation_sources.json
FEATURED_QUERIES_PATH=config/featured_queries.json