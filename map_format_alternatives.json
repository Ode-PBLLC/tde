{
    "map_format_options": {
        
        "option_1_geojson": {
            "type": "map",
            "mapType": "geojson",
            "geojson": {
                "type": "FeatureCollection",
                "features": [
                    {
                        "type": "Feature",
                        "geometry": {
                            "type": "Point",
                            "coordinates": [-46.6333, -23.5505]
                        },
                        "properties": {
                            "facility_id": "BR_001",
                            "capacity_mw": 145.2,
                            "country": "Brazil",
                            "popup_title": "Solar Facility BR001",
                            "popup_content": "Capacity: 145.2 MW",
                            "marker_color": "#4CAF50",
                            "marker_size": 8
                        }
                    }
                ]
            },
            "center": [-51.9253, -14.235],
            "zoom": 5
        },

        "option_2_simple_markers": {
            "type": "map", 
            "mapProvider": "leaflet",
            "config": {
                "center": {"lat": -14.235, "lng": -51.9253},
                "zoom": 5,
                "style": "openstreetmap"
            },
            "layers": [
                {
                    "type": "markers",
                    "name": "solar_facilities",
                    "data": [
                        {
                            "lat": -23.5505,
                            "lng": -46.6333,
                            "size": 8,
                            "color": "#4CAF50",
                            "tooltip": "Solar Facility: 145.2 MW",
                            "metadata": {
                                "capacity_mw": 145.2,
                                "facility_id": "BR_001"
                            }
                        }
                    ]
                }
            ]
        },

        "option_3_mapbox_style": {
            "type": "map",
            "mapProvider": "mapbox",
            "mapboxStyle": "mapbox://styles/mapbox/light-v11",
            "viewport": {
                "latitude": -14.235,
                "longitude": -51.9253,
                "zoom": 5
            },
            "layers": [
                {
                    "id": "solar-facilities",
                    "type": "circle",
                    "source": {
                        "type": "geojson",
                        "data": {
                            "type": "FeatureCollection", 
                            "features": [
                                {
                                    "type": "Feature",
                                    "geometry": {
                                        "type": "Point",
                                        "coordinates": [-46.6333, -23.5505]
                                    },
                                    "properties": {
                                        "capacity": 145.2,
                                        "facility_id": "BR_001"
                                    }
                                }
                            ]
                        }
                    },
                    "paint": {
                        "circle-radius": ["interpolate", ["linear"], ["get", "capacity"], 0, 4, 1000, 20],
                        "circle-color": "#4CAF50",
                        "circle-opacity": 0.8
                    }
                }
            ]
        },

        "option_4_deck_gl": {
            "type": "map",
            "mapProvider": "deck.gl",
            "viewState": {
                "longitude": -51.9253,
                "latitude": -14.235, 
                "zoom": 5
            },
            "layers": [
                {
                    "@@type": "ScatterplotLayer",
                    "id": "solar-facilities",
                    "data": [
                        {
                            "coordinates": [-46.6333, -23.5505],
                            "capacity": 145.2,
                            "facility_id": "BR_001"
                        }
                    ],
                    "getPosition": "coordinates",
                    "getRadius": "d => Math.sqrt(d.capacity) * 100",
                    "getFillColor": [76, 175, 80],
                    "pickable": true
                }
            ]
        }
    },

    "recommended_approach": {
        "comment": "I recommend Option 1 (GeoJSON) or Option 2 (Simple Markers) as they're most widely supported and flexible",
        "benefits": {
            "geojson": "Standard format, works with most mapping libraries",
            "simple_markers": "Easy to implement, very readable, good for basic use cases"
        }
    }
}