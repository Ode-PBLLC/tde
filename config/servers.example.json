  ],
  
  "domain_examples": {
    "finance": {
      "servers": ["market_data_server.py", "portfolio_analysis_server.py", "risk_assessment_server.py"]
    },
    "healthcare": {
      "servers": ["patient_data_server.py", "clinical_research_server.py", "drug_database_server.py"]
    },
    "environmental": {
      "servers": ["environmental_data_server.py", "climate_analysis_server.py", "pollution_monitoring_server.py"]
    }
  }
}